<?xml version='1.0'?>
<xefis-include>
	<module name='systems/nc'>
		<properties>
			<!-- Input -->
			<property name='position.input.longitude' path='/aircraft/sensors/gps/longitude'/>
			<property name='position.input.latitude' path='/aircraft/sensors/gps/latitude'/>
			<property name='position.input.altitude.amsl' path='/aircraft/sensors/gps/altitude-amsl'/>
			<property name='position.input.lateral.stddev' path='/aircraft/sensors/gps/lateral.stddev'/>
			<property name='position.input.vertical.stddev' path='/aircraft/sensors/gps/vertical.stddev'/>
			<property name='position.input.source' path='/aircraft/sensors/gps/source'/>
			<property name='orientation.input.pitch' path='/aircraft/sensors/ahrs/orientation/pitch'/>
			<property name='orientation.input.roll' path='/aircraft/sensors/ahrs/orientation/roll'/>
			<property name='orientation.input.heading.magnetic' path='/aircraft/sensors/ahrs/orientation/heading.magnetic'/>
			<!-- Output -->
			<directory path='/systems/nc'>
				<property name='position.longitude' path='/position/longitude'/>
				<property name='position.latitude' path='/position/latitude'/>
				<property name='position.altitude.amsl' path='/position/altitude.amsl'/>
				<property name='position.lateral.stddev' path='/position/lateral.stddev'/>
				<property name='position.vertical.stddev' path='/position/vertical.stddev'/>
				<property name='position.stddev' path='/position/position.stddev'/>
				<property name='position.source' path='/position/source'/>
				<property name='orientation.pitch' path='/orientation/pitch'/>
				<property name='orientation.roll' path='/orientation/roll'/>
				<property name='orientation.heading.magnetic' path='/orientation/heading/magnetic'/>
				<property name='orientation.heading.true' path='/orientation/heading/true'/>
				<property name='track.vertical' path='/track/vertical'/>
				<property name='track.lateral.magnetic' path='/track/lateral/magnetic'/>
				<property name='track.lateral.true' path='/track/lateral/true'/>
				<property name='track.lateral.rotation' path='/track/lateral/rotation'/>
				<property name='track.ground-speed' path='/track/ground-speed'/>
				<property name='magnetic.declination' path='/magnetic/declination'/>
				<property name='magnetic.inclination' path='/magnetic/inclination'/>
			</directory>
		</properties>
	</module>
</xefis-include>

