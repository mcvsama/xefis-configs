<?xml version='1.0'?>
<xefis-include>
	<module name='systems/adc'>
		<settings>
			<setting name='ias.valid-minimum' value='20 kt'/>
			<setting name='ias.valid-maximum' value='800 kt'/>
		</settings>
		<properties>
			<!-- Input -->
			<property name='settings.pressure.use-std' path='/settings/pressure/use-std'/>
			<property name='settings.pressure.qnh' path='/settings/pressure/qnh'/>
			<property name='pressure.static.serviceable' path='/aircraft/sensors/pressure/serviceable'/>
			<property name='pressure.static' path='/aircraft/sensors/pressure/static'/>
			<property name='pressure.total' path='/aircraft/sensors/pressure/total'/>
			<property name='ias.serviceable' path='/aircraft/sensors/airspeed/serviceable'/>
			<property name='ias' path='/aircraft/sensors/airspeed/ias'/>
			<property name='air-temperature.total' path='/aircraft/sensors/air-temperature/total'/>
			<!-- Output -->
			<directory path='/systems/adc'>
				<property name='pressure.dynamic' path='/pressure/dynamic'/>
				<property name='altitude.amsl.serviceable' path='/altitude/amsl.serviceable'/>
				<property name='altitude.amsl' path='/altitude/amsl'/>
				<property name='altitude.amsl.lookahead' path='/altitude/amsl.lookahead'/>
				<property name='altitude.amsl.qnh' path='/altitude/amsl.qnh'/>
				<property name='altitude.amsl.std' path='/altitude/amsl.std'/>
				<property name='density-altitude' path='/density-altitude'/>
				<property name='speed.ias.serviceable' path='/speed/ias.serviceable'/>
				<property name='speed.ias' path='/speed/ias'/>
				<property name='speed.ias.lookahead' path='/speed/ias.lookahead'/>
				<property name='speed.tas' path='/speed/tas'/>
				<property name='speed.mach' path='/speed/mach'/>
				<property name='speed.sound' path='/speed/sound'/>
				<property name='vertical-speed.serviceable' path='/vertical-speed/serviceable'/>
				<property name='vertical-speed' path='/vertical-speed/speed'/>
				<property name='air-temperature.static' path='/air-temperature/static'/>
			</directory>
		</properties>
	</module>
</xefis-include>

