			<property name='output.reciprocal.magnetic' path='/systems/vor/right/reciprocal.magnetic'/>
			<property name='output.initial-bearing.magnetic' path='/systems/vor/right/initial-bearing.magnetic'/>
			<property name='output.deviation' path='/systems/vor/right/deviation'/>
			<property name='output.to-flag' path='/systems/vor/right/to-flag'/>
			<property name='output.distance' path='/systems/vor/right/distance'/>
		</properties>
