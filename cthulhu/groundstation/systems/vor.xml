			<property name='output.reciprocal.magnetic' path='/systems/vor/left/reciprocal.magnetic'/>
			<property name='output.initial-bearing.magnetic' path='/systems/vor/left/initial-bearing.magnetic'/>
			<property name='output.deviation' path='/systems/vor/left/deviation'/>
			<property name='output.to-flag' path='/systems/vor/left/to-flag'/>
			<property name='output.distance' path='/systems/vor/left/distance'/>
		</properties>
	</module>
	<module name='systems/vor' instance='vor-right'>
		<properties>
			<property name='input.magnetic.declination' path='/systems/nc/magnetic/declination'/>
