<?xml version='1.0'?>
<xefis-include>
	<module name='systems/vor' instance='home'>
		<properties>
			<property name='input.magnetic.declination' path='/systems/nc/magnetic/declination'/>
			<property name='input.station.latitude' path='/systems/rcms/home/latitude'/>
			<property name='input.station.longitude' path='/systems/rcms/home/longitude'/>
