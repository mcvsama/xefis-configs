			<property name='output.initial-bearing.magnetic' path='/systems/vor/home/initial-bearing.magnetic'/>
			<property name='output.deviation' path='/systems/vor/home/deviation'/>
			<property name='output.to-flag' path='/systems/vor/home/to-flag'/>
			<property name='output.distance' path='/systems/vor/home/distance'/>
