<?xml version='1.0'?>
<xefis-include>
	<module name='systems/altacq'>
		<settings>
			<setting name='minimum-altitude-difference' value='100 ft'/>
		</settings>
		<properties>
			<!-- Input -->
			<property name='altitude.amsl' path='/systems/adc/altitude/amsl'/>
			<property name='altitude.acquire.amsl' path='/aircraft/settings/cmd/altitude'/>
			<property name='vertical-speed' path='/systems/adc/vertical-speed/speed'/>
			<property name='ground-speed' path='/systems/nc/track/ground-speed'/>
			<!-- Output -->
			<property name='altitude.acquire.distance' path='/systems/altacq/distance'/>
		</properties>
	</module>
</xefis-include>

