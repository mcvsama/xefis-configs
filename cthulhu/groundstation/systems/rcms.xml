<?xml version='1.0'?>
<xefis-include>
	<module name='systems/rcms'>
		<properties>
			<!-- Input -->
			<directory path='/systems/nc/position'>
				<property name='position.longitude' path='/longitude'/>
				<property name='position.latitude' path='/latitude'/>
				<property name='position.altitude-amsl' path='/altitude.amsl'/>
			</directory>
			<!-- Output -->
			<directory path='/settings/vor/home'>
				<property name='home.longitude' path='/longitude'/>
				<property name='home.latitude' path='/latitude'/>
				<property name='home.altitude-amsl' path='/altitude-amsl'/>
			</directory>
			<directory path='/systems/rcms/home'>
				<property name='home.distance.vlos' path='/distance/vlos'/>
				<property name='home.distance.ground' path='/distance/ground'/>
				<property name='home.distance.vertical' path='/distance/vertical'/>
				<property name='home.true-direction' path='/true-direction'/>
			</directory>
		</properties>
	</module>
</xefis-include>

