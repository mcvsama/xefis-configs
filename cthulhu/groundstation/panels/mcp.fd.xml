<?xml version='1.0'?>
<xefis-include>
	<item>
		<group label='SPEED'>
			<layout type='vertical' spacing='10'>
				<item>
					<widget type='numeric-display' digits='4' format-property='/systems/afcs/mcp/formats/speed-format' value-property='/panels/mcp/afcs/display.speed'/>
				</item>
				<item>
					<widget type='rotary-encoder' top-label='IAS • MACH' value-property='/panels/mcp/afcs/rotary-encoder.speed' click-property='/panels/mcp/afcs/button.speed-ias-mach'/>
				</item>
				<stretch/>
				<item>
					<layout type='horizontal' spacing='10'>
						<item>
							<widget type='button' top-label='SPD SEL' click-property='/panels/mcp/afcs/button.speed-sel' led-property='/panels/mcp/afcs/led.speed-sel' led-color='amber'/>
						</item>
						<item>
							<widget type='button' top-label='HOLD' click-property='/panels/mcp/afcs/button.speed-hold' led-property='/panels/mcp/afcs/led.speed-hold' led-color='amber'/>
						</item>
					</layout>
				</item>
			</layout>
		</group>
	</item>
	<item>
		<group label='HEADING'>
			<layout type='vertical' spacing='10'>
				<item>
					<widget type='numeric-display' digits='3' format-property='/systems/afcs/mcp/formats/heading-format' value-property='/panels/mcp/afcs/display.heading'/>
				</item>
				<item>
					<widget type='rotary-encoder' top-label='HDG • TRK' value-property='/panels/mcp/afcs/rotary-encoder.heading' click-property='/panels/mcp/afcs/button.heading-hdg-trk'/>
				</item>
				<stretch/>
				<item>
					<layout type='horizontal' spacing='10'>
						<item>
							<widget type='button' top-label='HDG SEL' click-property='/panels/mcp/afcs/button.heading-sel' led-property='/panels/mcp/afcs/led.heading-sel' led-color='amber'/>
						</item>
						<item>
							<widget type='button' top-label='HOLD' click-property='/panels/mcp/afcs/button.heading-hold' led-property='/panels/mcp/afcs/led.heading-hold' led-color='amber'/>
						</item>
					</layout>
				</item>
			</layout>
		</group>
	</item>
	<item>
		<group>
			<layout type='vertical' spacing='10'>
				<item>
					<widget type='button' top-label='VNAV' click-property='/panels/mcp/afcs/button.vnav' led-property='/panels/mcp/afcs/led.vnav' led-color='amber'/>
				</item>
				<stretch/>
				<item>
					<widget type='button' top-label='LNAV' click-property='/panels/mcp/afcs/button.lnav' led-property='/panels/mcp/afcs/led.lnav' led-color='amber'/>
				</item>
				<stretch/>
				<item>
					<widget type='button' top-label='APP' click-property='/panels/mcp/afcs/button.app' led-property='/panels/mcp/afcs/led.app' led-color='amber'/>
				</item>
			</layout>
		</group>
	</item>
	<item>
		<group label='ALTITUDE'>
			<layout type='vertical' spacing='10'>
				<item>
					<widget type='numeric-display' digits='5' format-property='/systems/afcs/mcp/formats/altitude-format' value-property='/panels/mcp/afcs/display.altitude'/>
				</item>
				<item>
					<widget type='rotary-encoder' top-label='10 • 100' value-property='/panels/mcp/afcs/rotary-encoder.altitude' click-property='/panels/mcp/afcs/button.altitude-stepch'/>
				</item>
				<stretch/>
				<item>
					<layout type='horizontal' spacing='10'>
						<item>
							<widget type='button' top-label='FLCH' click-property='/panels/mcp/afcs/button.altitude-flch' led-property='/panels/mcp/afcs/led.altitude-flch' led-color='amber'/>
						</item>
						<item>
							<widget type='button' top-label='HOLD' click-property='/panels/mcp/afcs/button.altitude-hold' led-property='/panels/mcp/afcs/led.altitude-hold' led-color='amber'/>
						</item>
					</layout>
				</item>
			</layout>
		</group>
	</item>
	<item>
		<group label='VERTICAL SPEED'>
			<layout type='vertical' spacing='10'>
				<item>
					<widget type='numeric-display' digits='5' format-property='/systems/afcs/mcp/formats/vspd-format' value-property='/panels/mcp/afcs/display.vertical-speed'/>
				</item>
				<item>
					<widget type='rotary-encoder' top-label='V/S • FPA' value-property='/panels/mcp/afcs/rotary-encoder.vspd' click-property='/panels/mcp/afcs/button.vspd-vs-fpa'/>
				</item>
				<stretch/>
				<item>
					<layout type='horizontal' spacing='10'>
						<item>
							<widget type='button' top-label='VS/FPA' click-property='/panels/mcp/afcs/button.vspd-sel' led-property='/panels/mcp/afcs/led.vspd-sel' led-color='amber'/>
						</item>
						<item>
							<widget type='button' top-label='VS HOLD' click-property='/panels/mcp/afcs/button.vs-hold' led-property='/panels/mcp/afcs/led.vs-hold' led-color='amber'/>
						</item>
						<item>
							<widget type='button' top-label='CLB/CON' click-property='/panels/mcp/afcs/button.vspd-clb-con' led-property='/panels/mcp/afcs/led.vspd-clb-con' led-color='amber'/>
						</item>
					</layout>
				</item>
			</layout>
		</group>
	</item>
</xefis-include>

