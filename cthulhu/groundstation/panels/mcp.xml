<?xml version='1.0'?>
<xefis-include>
	<panel>
		<layout type='horizontal' spacing='5'>
			<stretch/>
			<item>
				<group label='PFD &amp; ND'>
					<layout type='horizontal' spacing='20'>
						<item>
							<layout type='vertical' spacing='10'>
								<item>
									<widget type='rotary-encoder' top-label='MINS' click-label='B/R' value-property='/panels/mcp/mins'/>
								</item>
								<stretch/>
								<item>
									<widget type='button' top-label='APPR' click-property='/panels/mcp/appr' led-property='/settings/efis/approach-reference-visible' led-color='green'/>
								</item>
								<item>
									<widget type='button' top-label='FD' click-property='/panels/mcp/fd' led-property='/settings/efis/cmd-guidance-visible' led-color='green'/>
								</item>
							</layout>
						</item>
						<item>
							<layout type='vertical' spacing='10'>
								<item>
									<widget type='rotary-encoder' top-label='PFD RNG' value-property='/panels/mcp/pfd-range'/>
								</item>
								<stretch/>
								<item>
									<widget type='button' top-label='H/TRK' click-property='/panels/mcp/htrk' led-property='/settings/hsi/home-track-visible' led-color='green'/>
								</item>
								<item>
									<widget type='button' top-label='FPV' click-property='/panels/mcp/fpv' led-property='/settings/efis/fpv-visible' led-color='green'/>
								</item>
							</layout>
						</item>
						<item>
							<layout type='vertical' spacing='10'>
								<item>
									<widget type='rotary-encoder' top-label='ALTM' click-label='hPa' value-property='/panels/mcp/qnh' click-property='/panels/mcp/qnh-hpa'/>
								</item>
								<stretch/>
								<item>
									<widget type='button' top-label='STD' click-property='/panels/mcp/std' led-property='/settings/pressure/use-std'/>
								</item>
								<item>
									<widget type='button' top-label='METRIC' click-property='/panels/mcp/metric' led-property='/settings/efis/show-metric' led-color='green'/>
								</item>
							</layout>
						</item>
						<item>
							<layout type='vertical' spacing='10'>
								<item>
									<widget type='rotary-encoder' top-label='RANGE' click-label='CTR' value-property='/panels/mcp/range' click-property='/panels/mcp/range-ctr'/>
								</item>
								<stretch/>
								<item>
									<widget type='button' top-label='HDG/TRK' click-property='/panels/mcp/hdg-trk'/>
								</item>
								<item>
									<widget type='button' top-label='MAG/TRU' click-property='/panels/mcp/mag-tru'/>
								</item>
							</layout>
						</item>
					</layout>
				</group>
			</item>
			<stretch/>
			<separator/>
			<stretch/>
			<item>
				<group label='NAVAID L/R'>
					<layout type='horizontal' spacing='10'>
						<item>
							<layout type='vertical' spacing='5'>
								<item>
									<widget type='button' top-label='OFF' click-property='/panels/mcp/navaid-left/button.off' led-property='/panels/mcp/navaid-left/led.off' led-color='amber'/>
								</item>
								<stretch/>
								<item>
									<widget type='button' top-label='VOR 1' click-property='/panels/mcp/navaid-left/button.vor' led-property='/panels/mcp/navaid-left/led.vor' led-color='green'/>
								</item>
								<stretch/>
								<item>
									<widget type='button' top-label='HOME' click-property='/panels/mcp/navaid-left/button.home' led-property='/panels/mcp/navaid-left/led.home' led-color='green'/>
								</item>
							</layout>
						</item>
						<item>
							<layout type='vertical' spacing='5'>
								<item>
									<widget type='button' top-label='OFF' click-property='/panels/mcp/navaid-right/button.off' led-property='/panels/mcp/navaid-right/led.off' led-color='amber'/>
								</item>
								<stretch/>
								<item>
									<widget type='button' top-label='VOR 2' click-property='/panels/mcp/navaid-right/button.vor' led-property='/panels/mcp/navaid-right/led.vor' led-color='green'/>
								</item>
								<stretch/>
								<item>
									<widget type='button' top-label='HOME' click-property='/panels/mcp/navaid-right/button.home' led-property='/panels/mcp/navaid-right/led.home' led-color='green'/>
								</item>
							</layout>
						</item>
					</layout>
				</group>
			</item>
			<item>
				<group label='COURSE'>
					<layout type='horizontal' spacing='15'>
						<item>
							<layout type='vertical' spacing='5'>
								<item>
									<widget type='button' top-label='OFF' click-property='/panels/mcp/navaid/button.off' led-property='/panels/mcp/navaid/led.off' led-color='amber'/>
								</item>
								<stretch/>
								<item>
									<widget type='button' top-label='ILS' click-property='/panels/mcp/navaid/button.ils' led-property='/panels/mcp/navaid/led.ils' led-color='green'/>
								</item>
								<stretch/>
								<item>
									<widget type='button' top-label='NAV 1' click-property='/panels/mcp/navaid/button.vor-l' led-property='/panels/mcp/navaid/led.vor-l' led-color='green'/>
								</item>
							</layout>
						</item>
						<item>
							<layout type='vertical' spacing='10'>
								<item>
									<widget type='numeric-display' digits='3' pad-with-zeros='true' value-property='/settings/course/magnetic.integer'/>
								</item>
								<item>
									<widget type='rotary-encoder' click-label='─┼' top-label='HIDE' value-property='/panels/mcp/course' click-property='/panels/mcp/course-hide'/>
								</item>
								<stretch/>
								<item>
									<widget type='button' top-label='NAV 2' click-property='/panels/mcp/navaid/button.vor-r' led-property='/panels/mcp/navaid/led.vor-r' led-color='green'/>
								</item>
							</layout>
						</item>
					</layout>
				</group>
			</item>
			<stretch/>
			<separator/>
			<stretch/>
			<item>
				<group label='FBW'>
					<layout type='horizontal' spacing='10'>
						<item>
							<layout type='vertical' spacing='10'>
								<item>
									<widget type='button' top-label='A/P' click-property='/panels/mcp/afcs/button.ap' led-property='/panels/mcp/afcs/led.ap' led-color='amber'/>
								</item>
								<stretch/>
								<item>
									<widget type='button' top-label='YD' click-property='/panels/mcp/afcs/button.yd' led-property='/panels/mcp/afcs/led.yd' led-color='amber'/>
								</item>
								<stretch/>
								<item>
									<widget type='button' top-label='ATT✶' click-property='/panels/mcp/afcs/button.att' led-property='/panels/mcp/afcs/led.att' led-color='amber'/>
								</item>
							</layout>
						</item>
						<item>
							<layout type='vertical' spacing='10'>
								<item>
									<widget type='button' top-label='A/T' click-property='/panels/mcp/afcs/button.at' led-property='/panels/mcp/afcs/led.at' led-color='amber'/>
								</item>
								<stretch/>
								<item>
									<widget type='button' top-label='PROT' click-property='/panels/mcp/afcs/button.prot' led-property='/panels/mcp/afcs/led.prot' led-color='amber'/>
								</item>
								<stretch/>
								<item>
									<widget type='button' top-label='TAC' click-property='/panels/mcp/afcs/button.tac' led-property='/panels/mcp/afcs/led.tac' led-color='amber'/>
								</item>
							</layout>
						</item>
					</layout>
				</group>
			</item>
			<item>
				<group label='SPEED'>
					<layout type='vertical' spacing='10'>
						<item>
							<widget type='numeric-display' digits='4' value-property='/panels/mcp/afcs/display.speed'/>
						</item>
						<item>
							<widget type='rotary-encoder' top-label='IAS • MACH' value-property='/panels/mcp/afcs/rotary-encoder.speed' click-property='/panels/mcp/afcs/rotary-encoder.speed-ias-mach'/>
						</item>
						<stretch/>
						<item>
							<layout type='horizontal' spacing='10'>
								<item>
									<widget type='button' top-label='SPD SEL' click-property='/panels/mcp/afcs/button.speed-sel' led-property='/panels/mcp/afcs/led.speed-sel' led-color='amber'/>
								</item>
								<item>
									<widget type='button' top-label='HOLD' click-property='/panels/mcp/afcs/button.speed-hold' led-property='/panels/mcp/afcs/led.speed-hold' led-color='amber'/>
								</item>
							</layout>
						</item>
					</layout>
				</group>
			</item>
			<item>
				<group label='HEADING'>
					<layout type='vertical' spacing='10'>
						<item>
							<widget type='numeric-display' digits='3' pad-with-zeros='true' value-property='/panels/mcp/afcs/display.heading'/>
						</item>
						<item>
							<widget type='rotary-encoder' top-label='HDG • TRK' value-property='/panels/mcp/afcs/rotary-encoder.heading' click-property='/panels/mcp/afcs/rotary-encoder.heading-hdg-trk'/>
						</item>
						<stretch/>
						<item>
							<layout type='horizontal' spacing='10'>
								<item>
									<widget type='button' top-label='HDG SEL' click-property='/panels/mcp/afcs/button.heading-sel' led-property='/panels/mcp/afcs/led.heading-sel' led-color='amber'/>
								</item>
								<item>
									<widget type='button' top-label='HOLD' click-property='/panels/mcp/afcs/button.heading-hold' led-property='/panels/mcp/afcs/led.heading-hold' led-color='amber'/>
								</item>
							</layout>
						</item>
					</layout>
				</group>
			</item>
			<item>
				<group>
					<layout type='vertical' spacing='10'>
						<item>
							<widget type='button' top-label='VNAV' click-property='/panels/mcp/afcs/button.vnav' led-property='/panels/mcp/afcs/led.vnav' led-color='amber'/>
						</item>
						<stretch/>
						<item>
							<widget type='button' top-label='LNAV' click-property='/panels/mcp/afcs/button.lnav' led-property='/panels/mcp/afcs/led.lnav' led-color='amber'/>
						</item>
						<stretch/>
						<item>
							<widget type='button' top-label='APP' click-property='/panels/mcp/afcs/button.app' led-property='/panels/mcp/afcs/led.app' led-color='amber'/>
						</item>
					</layout>
				</group>
			</item>
			<item>
				<group label='ALTITUDE'>
					<layout type='vertical' spacing='10'>
						<item>
							<widget type='numeric-display' digits='5' value-property='/panels/mcp/afcs/display.altitude'/>
						</item>
						<item>
							<widget type='rotary-encoder' top-label='10 • 100' value-property='/panels/mcp/afcs/rotary-encoder.altitude' click-property='/panels/mcp/afcs/rotary-encoder.altitude-stepch'/>
						</item>
						<stretch/>
						<item>
							<layout type='horizontal' spacing='10'>
								<item>
									<widget type='button' top-label='FLCH' click-property='/panels/mcp/afcs/button.altitude-flch' led-property='/panels/mcp/afcs/led.altitude-flch' led-color='amber'/>
								</item>
								<item>
									<widget type='button' top-label='HOLD' click-property='/panels/mcp/afcs/button.altitude-hold' led-property='/panels/mcp/afcs/led.altitude-hold' led-color='amber'/>
								</item>
							</layout>
						</item>
					</layout>
				</group>
			</item>
			<item>
				<group label='VERTICAL SPEED'>
					<layout type='vertical' spacing='10'>
						<item>
							<widget type='numeric-display' digits='5' value-property='/panels/mcp/afcs/display.vertical-speed'/>
						</item>
						<item>
							<widget type='rotary-encoder' top-label='V/S • FPA' value-property='/panels/mcp/afcs/rotary-encoder.vspd' click-property='/panels/mcp/afcs/rotary-encoder.vspd-vs-fpa'/>
						</item>
						<stretch/>
						<item>
							<layout type='horizontal' spacing='10'>
								<item>
									<widget type='button' top-label='VS/FPA' click-property='/panels/mcp/afcs/button.vspd-sel' led-property='/panels/mcp/afcs/led.vspd-sel' led-color='amber'/>
								</item>
								<item>
									<widget type='button' top-label='CLB/CON' click-property='/panels/mcp/afcs/button.vspd-clb-con' led-property='/panels/mcp/afcs/led.vspd-clb-con' led-color='amber'/>
								</item>
							</layout>
						</item>
					</layout>
				</group>
			</item>
			<stretch/>
			<separator/>
			<stretch/>
			<item>
				<group label='MFD'>
					<layout type='horizontal' spacing='10'>
						<item>
							<layout type='vertical' spacing='5'>
								<item>
									<widget type='button' top-label='EICAS' click-property='/panels/mcp/mfd/button.eicas' led-property='/panels/mcp/mfd/led.eicas'/>
								</item>
								<item>
									<widget type='button' top-label='ND' click-property='/panels/mcp/mfd/button.nd' led-property='/panels/mcp/mfd/led.nd'/>
								</item>
								<stretch/>
							</layout>
						</item>
						<item>
							<layout type='vertical' spacing='5'>
								<item>
									<widget type='button' top-label='CHKL' click-property='/panels/mcp/mfd/button.chkl' led-property='/panels/mcp/mfd/led.chkl'/>
								</item>
								<item>
									<widget type='button' top-label='ELEC' click-property='/panels/mcp/mfd/button.elec' led-property='/panels/mcp/mfd/led.elec'/>
								</item>
								<stretch/>
							</layout>
						</item>
					</layout>
				</group>
			</item>
			<stretch/>
		</layout>
	</panel>
</xefis-include>

