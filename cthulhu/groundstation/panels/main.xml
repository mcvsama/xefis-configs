<?xml version='1.0'?>
<xefis-include>
	<panel>
		<layout type='vertical' spacing='5'>
			<item>
				<group label='EICAS'>
					<layout type='horizontal' spacing='5'>
						<item>
							<layout type='vertical' spacing='5'>
								<item>
									<widget type='button' top-label='MASTER CAUTION' click-property='/panels/eicas-status/button.master-caution' led-property='/panels/eicas-status/led.master-caution' led-color='amber'/>
								</item>
								<item>
									<widget type='button' top-label='MASTER WARNING' click-property='/panels/eicas-status/button.master-warning' led-property='/panels/eicas-status/led.master-warning' led-color='red'/>
								</item>
								<item>
									<widget type='button' top-label='MARKER' click-property='/panels/eicas-status/button.marker'/>
								</item>
							</layout>
						</item>
						<item>
							<layout type='vertical' spacing='5'>
								<item>
									<widget type='rotary-encoder' top-label='MSG' click-label='DEL' click-property='/panels/eicas-status/button.del' value-property='/panels/eicas-status/cursor'/>
								</item>
								<item>
									<widget type='button' top-label='RECALL' click-property='/panels/eicas-status/button.recall'/>
								</item>
								<item>
									<widget type='button' top-label='CLEAR' click-property='/panels/eicas-status/button.clear'/>
								</item>
							</layout>
						</item>
					</layout>
				</group>
			</item>
			<separator/>
			<item>
				<group label='LIGHTS'>
					<layout type='horizontal' spacing='5'>
						<item>
							<widget type='button' top-label='STRB' toggle-property='/settings/lights/strobe' led-property='/settings/lights/strobe' led-color='white'/>
						</item>
						<item>
							<widget type='button' top-label='POS' toggle-property='/settings/lights/position' led-property='/settings/lights/position' led-color='white'/>
						</item>
						<item>
							<widget type='button' top-label='LAND' toggle-property='/settings/lights/landing' led-property='/settings/lights/landing' led-color='white'/>
						</item>
						<stretch/>
					</layout>
				</group>
			</item>
			<separator/>
			<item>
				<group label='GPWS'>
					<layout type='horizontal' spacing='5'>
						<item>
							<widget type='button' top-label='ON' toggle-property='/settings/gpws/enabled' led-property='/settings/gpws/enabled' led-color='green'/>
						</item>
						<stretch/>
						<item>
							<widget type='button' top-label='FLAP INH.' toggle-property='/settings/gpws/flap-inhibit' led-property='/settings/gpws/flap-inhibit' led-color='amber'/>
						</item>
						<item>
							<widget type='button' top-label='GEAR INH.' toggle-property='/settings/gpws/gear-inhibit' led-property='/settings/gpws/gear-inhibit' led-color='amber'/>
						</item>
						<item>
							<widget type='button' top-label='TERR INH.' toggle-property='/settings/gpws/terrain-inhibit' led-property='/settings/gpws/terrain-inhibit' led-color='amber'/>
						</item>
					</layout>
				</group>
			</item>
			<item>
				<group label='TCAS'>
					<layout type='horizontal' spacing='5'>
						<item>
							<widget type='button' top-label='ON' toggle-property='/settings/tcas/on' led-property='/settings/tcas/on' led-color='green'/>
						</item>
						<stretch/>
					</layout>
				</group>
			</item>
			<item>
				<group label='PITOT'>
					<layout type='horizontal' spacing='5'>
						<item>
							<widget type='button' top-label='CAL' toggle-property='/' led-property='/' led-color='amber'/>
						</item>
						<stretch/>
					</layout>
				</group>
			</item>
			<item>
				<group label='AHRS'>
					<layout type='horizontal' spacing='5'>
						<item>
							<widget type='button' top-label='ALIGN' toggle-property='/' led-property='/' led-color='amber'/>
						</item>
						<stretch/>
					</layout>
				</group>
			</item>
			<item>
				<group label='ND'>
					<layout type='horizontal' spacing='5'>
						<item>
							<widget type='button' top-label='TERR' toggle-property='/settings/hsi/show-terr' led-property='/settings/hsi/show-terr' led-color='green'/>
						</item>
						<item>
							<widget type='button' top-label='LOC' toggle-property='/settings/hsi/show-loc' led-property='/settings/hsi/show-loc' led-color='green'/>
						</item>
						<item>
							<widget type='button' top-label='ARPT' toggle-property='/settings/hsi/show-arpt' led-property='/settings/hsi/show-arpt' led-color='green'/>
						</item>
						<item>
							<widget type='button' top-label='STA' toggle-property='/settings/hsi/show-sta' led-property='/settings/hsi/show-sta' led-color='green'/>
						</item>
						<item>
							<widget type='button' top-label='WPT' toggle-property='/settings/hsi/show-wpt' led-property='/settings/hsi/show-wpt' led-color='green'/>
						</item>
						<stretch/>
					</layout>
				</group>
			</item>
			<stretch/>
		</layout>
	</panel>
</xefis-include>

