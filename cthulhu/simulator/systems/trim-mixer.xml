<?xml version='1.0'?>
<xefis-include>
	<module name='systems/mixer' instance='trim-pitch'>
		<settings>
			<setting name='output-minimum' value='-1.0'/>
			<setting name='output-maximum' value='+1.0'/>
		</settings>
		<properties>
			<property name='input.0.value' path='/controls/elevator-stick'/>
			<property name='input.1.value' path='/controls/elevator-trim'/>
			<property name='output.value' path='/controls/elevator'/>
		</properties>
	</module>
	<module name='systems/mixer' instance='trim-roll'>
		<settings>
			<setting name='output-minimum' value='-1.0'/>
			<setting name='output-maximum' value='+1.0'/>
		</settings>
		<properties>
			<property name='input.0.value' path='/controls/ailerons-stick'/>
			<property name='input.1.value' path='/controls/ailerons-trim'/>
			<property name='output.value' path='/controls/ailerons'/>
		</properties>
	</module>
	<module name='systems/mixer' instance='trim-yaw'>
		<settings>
			<setting name='output-minimum' value='-1.0'/>
			<setting name='output-maximum' value='+1.0'/>
		</settings>
		<properties>
			<property name='input.0.value' path='/controls/rudder-pedals'/>
			<property name='input.1.value' path='/controls/rudder-trim'/>
			<property name='output.value' path='/controls/rudder'/>
		</properties>
	</module>
</xefis-include>

