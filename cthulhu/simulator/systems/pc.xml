<?xml version='1.0'?>
<xefis-include>
	<module name='systems/pc'>
		<settings>
			<setting name='total-energy-variometer.minimum-ias' value='10 kt'/>
		</settings>
		<properties>
			<!-- Input -->
			<property name='speed.ias' path='/systems/adc/speed/ias'/>
			<property name='speed.tas' path='/systems/adc/speed/tas'/>
			<property name='speed.gs' path='/systems/nc/track/ground-speed'/>
			<property name='vertical-speed' path='/systems/adc/vertical-speed/speed'/>
			<property name='altitude.amsl.std' path='/systems/adc/altitude/amsl.std'/>
			<property name='track.lateral.true' path='/systems/nc/track/lateral/true'/>
			<property name='orientation.heading.true' path='/systems/nc/orientation/heading/true'/>
			<property name='magnetic.declination' path='/systems/nc/magnetic/declination'/>
			<!-- Output -->
			<directory path='/systems/pc'>
				<property name='wind.from.true' path='/wind/from/true'/>
				<property name='wind.from.magnetic' path='/wind/from/magnetic'/>
				<property name='wind.speed.tas' path='/wind/speed/tas'/>
				<property name='glide-ratio' path='/glide-ratio'/>
				<property name='total-energy-variometer' path='/total-energy-variometer'/>
			</directory>
		</properties>
	</module>
</xefis-include>

