<?xml version='1.0'?>
<xefis-include>
	<module name='helpers/transistor' instance='stick-ap/ailerons'>
		<settings>
			<setting name='transition-time' value='1 s'/>
		</settings>
		<properties>
			<property name='input.selected' path='/settings/afcs/ap-selector' default='0'/>
			<property name='input.0.value' path='/controls/ailerons.stick'/>
			<property name='input.1.value' path='/systems/afcs/ap/controls/ailerons'/>
			<property name='output.value' path='/controls/ailerons'/>
		</properties>
	</module>
	<module name='helpers/transistor' instance='stick-ap/elevator'>
		<settings>
			<setting name='transition-time' value='1 s'/>
		</settings>
		<properties>
			<property name='input.selected' path='/settings/afcs/ap-selector'/>
			<property name='input.0.value' path='/controls/elevator.stick'/>
			<property name='input.1.value' path='/systems/afcs/ap/controls/elevator'/>
			<property name='output.value' path='/controls/elevator'/>
		</properties>
	</module>
</xefis-include>

