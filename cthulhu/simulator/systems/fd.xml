<?xml version='1.0'?>
<xefis-include>
	<module name='systems/flight-director'>
		<properties>
			<property name='disengage-ap' path='/systems/fd/disengage-ap'/>
			<directory path='/systems/fd'>
				<property name='output.pitch' path='/pitch'/>
				<property name='output.roll' path='/roll'/>
			</directory>
			<directory path='/settings/fd'>
				<property name='orientation.pitch-limit.maximum' path='/limits/pitch.max' default='5 deg'/>
				<property name='orientation.pitch-limit.minimum' path='/limits/pitch.min' default='-5 deg'/>
				<property name='orientation.roll-limit' path='/limits/roll' default='25 deg'/>
			</directory>
			<directory path='/settings/cmd'>
				<property name='cmd.roll-mode' path='/roll-mode'/>
				<property name='cmd.pitch-mode' path='/pitch-mode'/>
				<property name='cmd.heading.magnetic' path='/magnetic-heading-track'/>
				<property name='cmd.track.magnetic' path='/magnetic-heading-track'/>
				<property name='cmd.altitude' path='/altitude'/>
				<property name='cmd.ias' path='/ias'/>
				<property name='cmd.vertical-speed' path='/vertical-speed'/>
				<property name='cmd.fpa' path='/fpa'/>
			</directory>
			<directory path='/systems/nc'>
				<property name='measured.heading.magnetic' path='/orientation/heading/magnetic'/>
				<property name='measured.track.magnetic' path='/track/lateral/magnetic'/>
			</directory>
			<directory path='/systems/adc'>
				<property name='measured.altitude' path='/altitude/amsl'/>
				<property name='measured.ias' path='/speed/ias'/>
				<property name='measured.vertical-speed' path='/vertical-speed/speed'/>
				<property name='measured.fpa' path='/fpm/alpha'/>
			</directory>
		</properties>
	</module>
</xefis-include>

