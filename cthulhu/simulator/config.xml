<?xml version='1.0'?>
<xefis-config version='1.0'>
	<settings>
		<setting name='update-frequency' value='100 Hz'/>
		<setting name='navaids.enable' value='false'/>
	</settings>
	<airframe>
		<include name='airframe.xml'/>
	</airframe>
	<modules>
		<include name='comm/link.xml'/>
		<include name='comm/udp.xml'/>
		<include name='sensors/flightgear.xml'/>
		<include name='systems/adc.xml'/>
		<include name='systems/afcs.xml'/>
		<include name='systems/afcs-fd-roll.xml'/>
		<include name='systems/afcs-fd-pitch.xml'/>
		<include name='systems/afcs-ap.xml'/>
		<include name='systems/afcs-eac-yd.xml'/>
		<include name='systems/afcs-prot.xml'/>
		<include name='systems/afcs-roll-autotrim.xml'/>
		<include name='systems/ahrs-selector.xml'/>
		<include name='systems/altacq.xml'/>
		<include name='systems/nc.xml'/>
		<include name='systems/pc.xml'/>
		<include name='systems/flaps.xml'/>
		<include name='systems/at.xml'/>
		<include name='systems/engine.xml'/>
		<include name='systems/trim-mixer.xml'/>
		<include name='systems/speeds.xml'/>
		<include name='systems/mixing.xml'/>
		<include name='systems/watchdog.xml'/>
	</modules>
	<windows>
		<window width='400' height='500' full-screen='false'>
			<layout type='vertical'>
				<item>
					<instrument name='instruments/label'>
						<label>SIMULATOR COMPUTER</label>
						<align>hcenter vcenter</align>
						<color>#4bf</color>
						<font-size>20</font-size>
					</instrument>
				</item>
			</layout>
		</window>
	</windows>
</xefis-config>

